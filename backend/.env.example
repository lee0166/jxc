# 服务器配置
PORT=10000

# MongoDB数据库连接配置
# 请替换为你的 MongoDB Atlas 连接字符串
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shoe-inventory

# JWT认证配置
# 请使用强随机字符串作为密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS配置
# 生产环境建议设置为前端域名，如：https://your-app.onrender.com
# 开发环境可设置为 * 允许所有
CORS_ORIGIN=*

# 日志级别
LOG_LEVEL=info

# 环境模式
NODE_ENV=production
